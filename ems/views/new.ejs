<!DOCTYPE html>
<html lang="en">
    <% include header %>
    <body>
        <% include navbar %>
        <div role="main" class="container"><
            <br/><br/>
            <h2>New Employees</h2>
            <form method="post" action="/process">

              <!-- Tokenization Here-->
              <input type="hidden" id="_csrf" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label for="txtFirstName">First Name</label>
                <input type="text" id="txtFirstName" name="txtFirstName" class="form-control">
              </div>
              <div class="form-group">
                <label for="txtLastName">Last Name</label>
                <input type="text" id="txtLastName" name="txtLastName" class="form-control">
              </div>
              <div class="form-group">
                <button id="btnSubmit" type="submit" class="btn btn-primary float-right">Submit</button>
              </div>
            </form>
            <% include footer %>
            <br />
            <p>Contracters seeking employment are to email rmbaumann@my365.bellevue.edu</p>
        </div>
        <% include scripts %>
    </body>
</html>